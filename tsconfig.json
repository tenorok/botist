{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "sourceMap": true,
      "sourceRoot": "src",
      "declaration": true,
      "outDir": "dist",

      "strict": true,

      "noUnusedLocals": true,
      "noUnusedParameters": true,

      "moduleResolution": "node",
      "typeRoots": [
        "node_modules/@types",
        "types"
      ],
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true
    }
  }
